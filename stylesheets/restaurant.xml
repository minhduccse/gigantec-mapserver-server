<?xml version="1.0" encoding="utf-8"?>

<!-- An ultra simple Mapnik stylesheet -->

<!DOCTYPE Map[]>
<Map srs="+proj=merc +a=6378137 +b=6378137 +lat_ts=0.0 +lon_0=0.0 +x_0=0.0 +y_0=0.0 +k=1.0 +units=m +nadgrids=@null +wktext +no_defs +over" background-color="#00000000" buffer-size="256" maximum-extent="-20037508.34,-20037508.34,20037508.34,20037508.34">
    <Style name="restaurant_style">
        <Rule>
            <MarkersSymbolizer fill="#fa991c" file="../markers/restaurant.svg" transform="translate(0 -16) scale(0.07)"/>
        </Rule>
    </Style>
    <Layer name="hcm_restaurant" srs="+proj=longlat +ellps=WGS84 +datum=WGS84 +no_defs">
        <StyleName>restaurant_style</StyleName>
        <Datasource>
            <Parameter name="type">shape</Parameter>
            <Parameter name="file">../shapefiles/points_of_interest/restaurant/restaurant.shp</Parameter>
        </Datasource>
    </Layer>

    <Layer name="hn_restaurant" srs="+proj=longlat +ellps=WGS84 +datum=WGS84 +no_defs">
        <StyleName>restaurant_style</StyleName>
        <Datasource>
            <Parameter name="type">shape</Parameter>
            <Parameter name="file">../shapefiles/points_of_interest/restaurant/hn_restaurant.shp</Parameter>
        </Datasource>
    </Layer>
</Map>
